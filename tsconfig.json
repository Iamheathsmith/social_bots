{
	"compilerOptions": {
		"target": "ES2020",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": ".",
		"lib": ["ES2020", "DOM"],
		"types": ["node"]
	},
	"include": ["**/*.ts", "types/**/*.d.ts"],
	"exclude": ["dist"]
}
